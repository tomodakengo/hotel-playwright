{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/pages/components/*"],
      "@pages/*": ["src/pages/*"],
      "@actions/*": ["src/actions/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "playwright.config.ts", "types/**/*"]
} 